<h1>Recent Games</h1>

<div class="view-games">

<% for game in @games  %>
<p>Home: <%= game.get_home_team_name%> <%= game.home_team_score  %></p>
<p>Away: <%= game.get_away_team_name%> <%= game.away_team_score  %></p>

<h3><%= game.display_who_won  %></h3>

<form action="/games/<%= game.id %>" method="get"> <input type="submit" name="Show Game" value="Show Game" class="button">

</form>
<hr>

<% end %>

<hr/>

</div>
