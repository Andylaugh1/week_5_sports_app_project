<h1>Recent Games:</h1>

<% for game in @games  %>
<p><%= game.get_home_team_name%> <%= game.home_team_score  %></p>
<p><%= game.get_away_team_name%> <%= game.away_team_score  %></p>

<p><%= game.display_who_won  %></p>

<form action="/games/<%= game.id %>" method="get"> <input type="submit" name="Show Game" value="Show Game">

</form>

<% end %>

