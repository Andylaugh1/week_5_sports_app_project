<form method="post" action="/games/<%= @game.id %>/edit">
  <label> Select Home Team:
    <select id="Home-team-select" name="home_team_id">
      <% for team in @teams %>
      <option value="<%= team.id %>"><%= team.name %>
      </option>
      <% end %>
    </select>
  </label>

  <label> Select Away Team:
    <select id="Away-team-select" name="away_team_id">
      <% for team in @teams %>
      <option value="<%= team.id %>"><%= team.name %>
      </option>
      <% end %>
    </select>
  </label>

  <label for="home-team-score">Home Team Score</label>
  <input type="number" name="home_team_score" id="home-team-score">

  <label for="away-team-score">Away Team Score</label>
  <input type="number" name="away_team_score" id="away-team-score">

  <input type="submit" value="Update Game">

</form>
