<p>Team Name: <%= @team.name  %></p>

<form action="/teams/<%= @team.id %>/delete" method="post">
  <input type="submit" name="Delete" value="Delete Team">

</form>

<% for game in @games  %>
<p><%= game.get_home_team_name%> <%= game.home_team_score  %></p>
<p><%= game.get_away_team_name%> <%= game.away_team_score  %></p>

<p><%= game.display_who_won  %></p>

<% end %>
